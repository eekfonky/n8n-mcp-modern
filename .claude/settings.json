{
  "agentSettings": {
    "projectSpecific": true,
    "agentPath": ".claude/agents",
    "enforceSpecialization": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-typescript.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-javascript.sh"
          }
        ]
      }
    ]
  }
}
