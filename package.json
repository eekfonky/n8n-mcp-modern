{
  "name": "@eekfonky/n8n-mcp-modern",
  "version": "8.0.0",
  "description": "Ultra-lean, dynamic MCP server for conversation-driven n8n workflow automation with 2 dependencies",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "n8n-mcp": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node -e \"if(process.platform!=='win32'){require('child_process').execSync('chmod +x dist/index.js')}\"",
    "start": "node dist/index.js",
    "postinstall": "node scripts/simple-postinstall.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "validate-readme": "node scripts/validate-readme.cjs",
    "install": "node scripts/unified-installer.cjs",
    "config": "node scripts/config-manager.cjs",
    "health": "node scripts/health-checker.cjs",
    "update": "node scripts/smart-updater.cjs",
    "ci": "npm audit --audit-level high && npm run lint && npm run typecheck && npm run test",
    "precommit": "npm run lint && npm run typecheck && npm run test && npm run validate-readme",
    "release": "npm run ci && npm run build && npm publish",
    "publish": "npm publish --registry https://registry.npmjs.org --access public"
  },
  "keywords": [
    "n8n",
    "mcp",
    "model-context-protocol",
    "ai",
    "workflow",
    "automation",
    "typescript",
    "modern",
    "claude-code",
    "github-packages",
    "dynamic-tools",
    "conversation-driven",
    "zero-debt"
  ],
  "author": "Enhanced by eekfonky - Modern TypeScript rebuild",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eekfonky/n8n-mcp-modern.git"
  },
  "bugs": {
    "url": "https://github.com/eekfonky/n8n-mcp-modern/issues"
  },
  "homepage": "https://github.com/eekfonky/n8n-mcp-modern#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.17.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.6",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/",
    "data/nodes.db",
    "agents/",
    "!agents/README.md",
    "config-templates/",
    "scripts/simple-postinstall.cjs",
    "scripts/unified-installer.cjs",
    "scripts/health-checker.cjs",
    "scripts/config-manager.cjs",
    "scripts/smart-updater.cjs",
    "scripts/validate-github-auth.cjs",
    "scripts/validate-readme.cjs",
    "README.md",
    "LICENSE"
  ]
}
